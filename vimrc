set encoding=utf8
set ffs=unix,dos,mac

filetype plugin on
filetype indent on

set autoread
set autoindent
set backspace=indent,eol,start
set complete-=i
set smarttab

set nrformats-=octal

set ttimeout
set ttimeoutlen=100

set laststatus=2
set ruler
set showcmd
set wildmenu

syntax enable 
set background=dark
colorscheme = murphy

set nobackup
set nowb
set noswapfile

set ai 
set si 
set wrap 
