shell /bin/bash

setenv DISPLAY ':0'
autodetach on
altscreen on
nonblock on
vbell off
vbell_msg ""
defscrollback 5000

bindkey "^[Od" prev  #ctrl left, prev
bindkey "^[Oc" next  #ctrl right, next
bind j focus down   
bind k focus up
bind  ) select 10
bind  ! select 11
bind  @ select 12
bind \# select 13
bind \$ select 14
bind  % select 15
bind \^ select 16
bind  & select 17
bind  * select 18
bind  ( select 19
 
caption always "%?%{ Wk}%-Lw%?%{Rk}%n*%f %t%?(%u)%?%?%{Wk}%+Lw%? %{Rk}%=%c %{rk}%d/%M/%Y"

# Give an window list at the bottom of the screen, with the time and date and with the current window highlighted                                                                            
hardstatus             alwayslastline                                                                                                                          
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

# Hide hardstatus: ctrl-a f 
bind f eval "hardstatus ignore"
# Show hardstatus: ctrl-a F
bind F eval "hardstatus alwayslastline"

# Bold colors 
attrcolor b ".I"
 
# Tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# Enable 256 color term
term xterm-256color

# Allow scrollback with mouse
# Courtesy of http://slaptijack.com/system-administration/mac-os-x-terminal-and-gnu-screen-scrollback/
defscrollback 5000
termcapinfo xterm* ti@:te@
